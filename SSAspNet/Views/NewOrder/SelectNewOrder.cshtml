
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<page class="Page">
    <h2 align="center">Input data for new order</h2>

    <h3 align="center">Please, select type car:</h3>

    <div class="selectNewOrderRadioButton">
        @using (Html.BeginForm("SelectNewOrder", "NewOrder", FormMethod.Post))
        {
            @Html.RadioButton("Car", "PasCar", true)<span>Passanger car</span>
            <br>
            @Html.RadioButton("Car", "Truck", false)<span>Truck</span>
            <br>
            @Html.RadioButton("Car", "Bus", false)<span>Bus</span>
            <br>
            <button type="button" class="buttonCancel" onclick="window.history.back();">Cancel</button>
            <input type="submit" class="buttonOK" value="OK" />
        }
    </div>
</page>