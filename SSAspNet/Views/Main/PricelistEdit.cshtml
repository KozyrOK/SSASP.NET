@model SSAspNet.Model.Price

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<page class="Page">
    <h2 align="center">Pricelist edit</h2>

    @using (Html.BeginForm("PricelistEdit", "Main", FormMethod.Post))
    {
        <table class="tableSS" align="center">
            <tr>
                <th>Service</th>
                <th>Cost</th>
                <th></th>
            </tr>
            <tr>
                <td>Car body</td>
                <td>@Html.TextBoxFor(price => price.CarBody)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Car Wheels</td>
                <td>@Html.TextBoxFor(price => price.CarWheels)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Car Engine</td>
                <td>@Html.TextBoxFor(price => price.CarEngine)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Car Brakes</td>
                <td>@Html.TextBoxFor(price => price.CarBrakes)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Car Undercarriage</td>
                <td>@Html.TextBoxFor(price => price.CarUndercarriage)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Bus Salon</td>
                <td>@Html.TextBoxFor(price => price.BusSalon)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Bus Handsrails</td>
                <td>@Html.TextBoxFor(price => price.BusHandsrails)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Bus Upholstery</td>
                <td>@Html.TextBoxFor(price => price.BusUpholstery)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Wheel Balancing</td>
                <td>@Html.TextBoxFor(price => price.PasCarwheelBalancing)</td>
                <td>$</td>
            </tr>
            <tr>
                <td>Truck Hydraulics</td>
                <td>@Html.TextBoxFor(price => price.TruckHydraulics)</td>
                <td>$</td>
            </tr>
            <tr>
                <td><button type="button" class="buttonCancel" onclick="window.history.back();">Cancel</button></td>
                <td><input type="submit" class="buttonOK" value="Save" id="price"/></td>
            </tr>
        </table>
    }
</page>


